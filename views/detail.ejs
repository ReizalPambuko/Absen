<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2 class="display-5 mt-5">Detail Murid</h2>
      <div class="card mt-5" style="width: 18rem">
        <div class="card-body">
          <h4 class="card-title"><%= murid.nama %></h4>
          <h5 class="card-subtitle mb-2 mt-2 text-body-secondary">
            <%= murid.kehadiran %>
          </h5>
          <a
            href="/delete/<%= murid.nama %>"
            class="btn btn-danger badge rounded-pill mt-3"
            >Hapus</a
          >
          <a href="/" class="card-link d-block mt-4"
            ><i class="bi bi-arrow-left-short"></i>Kembali Ke Halaman
            Sebelumnya</a
          >
        </div>
      </div>
    </div>
  </div>
</div>
